<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_items"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/prod_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="23dp"
        android:text="abc"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/prod_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prod_name"
        android:layout_alignStart="@+id/prod_name"
        android:layout_below="@+id/prod_name"
        android:layout_marginTop="14dp"
        android:textSize="16dp"
        android:textColor="#ff3333"
        android:text="Brand" />

    <TextView
        android:id="@+id/prod_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:textSize="14dp"
        android:textColor="#666633"
        android:text="Description"
        android:layout_below="@+id/prod_brand"
        android:layout_alignLeft="@+id/prod_brand"
        android:layout_alignStart="@+id/prod_brand" />

    <Switch
        android:id="@+id/prod_avail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:text="Available:"
        android:textColor="#800000"
        android:layout_alignTop="@+id/prod_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView_mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prod_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:textSize="20dp"
        android:textColor="#737373"
        android:layout_marginBottom="5dp"
        android:text="Price :" />

    <TextView
        android:id="@+id/prod_mrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView_mrp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/textView_mrp"
        android:layout_toRightOf="@+id/textView_mrp"
        android:textSize="20dp"
        android:textColor="#009933"
        android:text="mrp" />

    <TextView
        android:id="@+id/retailer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/prod_mrp"
        android:layout_toEndOf="@+id/prod_mrp"
        android:layout_toRightOf="@+id/prod_mrp"
        android:layout_marginLeft="13dp"
        android:textSize="20dp"
        android:textColor="#0066cc"
        android:text="price"
        android:visibility="invisible"/>

    <!--<ImageView-->
        <!--android:id="@+id/mrp_cancelled"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:srcCompat="@mipmap/cancelled"-->
        <!--android:layout_below="@+id/prod_description"-->
        <!--android:layout_alignLeft="@+id/prod_mrp"-->
        <!--android:layout_alignStart="@+id/prod_mrp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:layout_marginLeft="-7dp"-->
        <!--android:visibility="visible"/>-->

    <TextView
        android:id="@+id/prod_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prod_avail"
        android:layout_alignStart="@+id/prod_avail"
        android:layout_alignTop="@+id/prod_brand"
        android:textSize="16dp"
        android:textColor="#ff3333"
        android:text="Category:" />

    <TextView
        android:id="@+id/mrp_cancelled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/prod_mrp"
        android:layout_toEndOf="@+id/prod_mrp"
        android:layout_toRightOf="@+id/prod_mrp"
        android:text="======="
        android:textColor="#000000"
        android:layout_marginLeft="-45dp"
        android:visibility="invisible"/>

</RelativeLayout>